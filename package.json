{
    "name": "trello-clone",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "start": "npx parcel src/index.html -p 4444",
        "build": "rm ./dist && npx parcel build src/index.html",
        "test:unit": "npx jest",
        "test:unit-watch": "npx jest --watch",
        "test:e2e": "npx cypress run'",
        "test:e2e-dev": "npx cypress open",
        "test": "npm run test:unit && npm run test:e2e",
        "lint": "npx tslint --project tsconfig.json --format stylish --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/piotr-m-jurek/trello-clone.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/piotr-m-jurek/trello-clone/issues"
    },
    "homepage": "https://github.com/piotr-m-jurek/trello-clone#readme",
    "dependencies": {
        "connected-react-router": "6.2.2",
        "history": "4.9.0",
        "lodash.throttle": "^4.1.1",
        "parcel-bundler": "^1.12.3",
        "react": "^16.8.6",
        "react-dom": "16.8.6",
        "react-redux": "6.0.0",
        "react-router-dom": "4.3.1",
        "redux": "4.0.1",
        "redux-loop": "5.0.0",
        "sass": "^1.20.1",
        "shortid": "^2.2.14",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@types/enzyme": "3.9.1",
        "@types/enzyme-adapter-react-16": "1.0.5",
        "@types/history": "4.7.2",
        "@types/lodash.throttle": "^4.1.6",
        "@types/node": "10.12.18",
        "@types/react": "16.8.13",
        "@types/react-dom": "16.8.4",
        "@types/react-redux": "7.0.6",
        "@types/react-router-dom": "4.3.2",
        "@types/shortid": "0.0.29",
        "@types/uuid": "3.4.4",
        "cypress": "^3.3.1",
        "enzyme": "3.9.0",
        "enzyme-adapter-react-16": "1.8.0",
        "husky": "^2.4.1",
        "identity-obj-proxy": "3.0.0",
        "jest": "24.7.1",
        "jest-css-modules": "1.1.0",
        "lint-staged": "^8.2.1",
        "offline-plugin": "5.0.6",
        "prettier": "^1.18.2",
        "ts-jest": "^24.0.2",
        "tslint": "5.15.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-consistent-codestyle": "1.15.1",
        "tslint-plugin-prettier": "2.0.1",
        "typescript": "^3.5.2"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/src/**/*.spec.(ts|tsx)"
        ],
        "setupFiles": [
            "<rootDir>/test/jest-setup.ts"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "identity-obj-proxy",
            "@/(.*)": "<rootDir>/src/$1",
            "^.+\\.scss$": "<rootDir>/test/stub.ts",
            "\\.(css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run lint && npm test"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npx prettier --config .prettierrc --write",
            "git add"
        ]
    }
}
